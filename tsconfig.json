{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "build",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
    ]
  },
  "paths": {
    "@": [
      "src/*"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}